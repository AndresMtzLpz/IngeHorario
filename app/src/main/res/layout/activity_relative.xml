<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo"
        tools:context=".Relative">

    <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            android:text="Ingrese sus datos"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color2"
    />

    <EditText
            android:id="@+id/nombre"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et"
            android:hint="Nombre"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@id/titulo"
    />

    <EditText
            android:id="@+id/AP"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et"
            android:hint="Apellido Paterno"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:paddingLeft="10dp"
            android:layout_below="@id/nombre"
    />

    <EditText
            android:id="@+id/AM"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et"
            android:hint="Apellido Materno"
            android:paddingLeft="10dp"
            android:layout_below="@id/nombre"
            android:layout_toRightOf="@id/AP"
    />
    <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/carreras"
            android:text="Carrera"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/AP"
            android:textColor="@color/color2"
    />
    <Spinner
            android:id="@+id/spin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/carreras"
            android:entries="@array/carreras"
    >

    </Spinner>

    <Spinner
            android:id="@+id/spin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/carreras"
            android:layout_toRightOf="@id/spin1"
            android:entries="@array/planes"
    >

    </Spinner>
    <EditText
        android:id="@+id/numcuenta"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_et"
        android:hint="Número de cuenta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:layout_below="@id/spin1"
    />
    <EditText
            android:id="@+id/numSsocial"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et"
            android:hint="Número de seguro social"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:layout_below="@id/numcuenta"
    />
    <EditText
            android:id="@+id/numCelular"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et"
            android:hint="Número celular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:layout_below="@id/numSsocial"
    />

    <Button
            android:id="@+id/actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bt_iniciar_2"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/numCelular"
            android:layout_marginTop="10dp"
            android:text="Actualizar"
            android:textColor="@color/blanco"
    />






</RelativeLayout>